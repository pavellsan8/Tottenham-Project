<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/galleryCV"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/match"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/galleryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="26 Apr, 2023"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/dateText"
                android:fontFamily="@font/essc_bold"
                android:textSize="11dp"
                />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp"
            android:layout_marginTop="7dp">

            <ImageView
                android:id="@+id/galleryImage"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/spurs_vs_bourne">

            </ImageView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/galleryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GALLERY"
                android:textSize="13dp"
                android:fontFamily="@font/essc_bold"
                android:textColor="@color/primaryColor"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/galleryDesc"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:text="Spurs 2 - 3 AFC Bournemouth"
                android:fontFamily="@font/essc_medium"
                android:textSize="11dp"
                android:textColor="@color/black"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>