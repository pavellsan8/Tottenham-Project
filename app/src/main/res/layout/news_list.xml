<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newsCV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/match"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/newsImage"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/ryan_masson">

            </ImageView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEWS"
                android:fontFamily="@font/essc_bold"
                android:textColor="@color/primaryColor"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/newsDesc"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Ryan Masson taking the training as a coach"
                android:fontFamily="@font/essc_medium"
                android:textSize="11dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/newsDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="26 Apr, 2023"
                android:layout_marginTop="5dp"
                android:textColor="@color/dateText"
                android:fontFamily="@font/essc_bold"
                android:textSize="10dp"
                android:gravity="center_horizontal"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>