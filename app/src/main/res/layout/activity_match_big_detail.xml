<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bgColor">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor">

        <ImageView
            android:id="@+id/backIconTicket"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_icon"
            android:layout_marginLeft="17dp"/>

        <TextView
            android:id="@+id/ticketTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUY TICKETS"
            android:textColor="@color/white"
            android:fontFamily="@font/essc_bold"
            android:textSize="22dp"
            android:layout_gravity="center_horizontal"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/matchTitleTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premier League"
                    android:fontFamily="@font/essc_bold"
                    android:textColor="@color/primaryColor"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="25dp">

                        <ImageView
                            android:id="@+id/homeImgTicket"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/th_logo"/>

                        <TextView
                            android:id="@+id/homeTagTicket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Totthenham \n Hotspur"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:fontFamily="@font/essc_medium"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/vsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vs"
                        android:textColor="@color/black"
                        android:fontFamily="@font/essc_bold"
                        android:layout_gravity="center"
                        android:textSize="20dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="25dp">

                        <ImageView
                            android:id="@+id/awayImgTicket"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/mu_logo"/>

                        <TextView
                            android:id="@+id/awayTagTicket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manchester \n United"
                            android:gravity="center"
                            android:textSize="15dp"
                            android:fontFamily="@font/essc_medium"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:id="@+id/dateMatchTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friday, 28 April 2023"
                        android:fontFamily="@font/essc_medium"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:textSize="16dp"/>

                    <TextView
                        android:id="@+id/timeMatchTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02:15 PM"
                        android:textSize="16dp"
                        android:fontFamily="@font/essc_medium"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:id="@+id/stadiumMatchTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tottenham Hotspur Stadium"
                        android:textSize="15dp"
                        android:fontFamily="@font/essc_bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/ticketPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$100"
                    android:textSize="25dp"
                    android:layout_marginLeft="13dp"
                    android:fontFamily="@font/essc_bold"
                    android:textColor="@color/black"
                    android:layout_gravity="start"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/inputTicket"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittextrounded"
            android:fontFamily="@font/essc_medium"
            android:hint="Enter Ticket Quantity"
            android:layout_gravity="center_horizontal"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textSize="16dp"
            android:inputType="number"/>

        <Button
            android:id="@+id/buttonBuy"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primaryColor"
            android:background="@drawable/buttonrounded"
            android:text="Buy Tickets"
            android:fontFamily="@font/essc_medium"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>